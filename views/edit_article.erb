<h2>Edit <%= @article.header %></h2>
<form action="/articles/<%= @article.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="header" placeholder="Edit title here">
  <input type="text" name="body_text" placeholder="Edit content here">
  <input type="text" name="name" placeholder="Add a category here">
  <input type="submit">
</form>